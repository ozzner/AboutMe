<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@drawable/material_background2"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/nav_view_header_padding"
    android:paddingRight="@dimen/nav_view_header_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- profile image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image"
        android:layout_width="@dimen/nav_view_header_image_profile"
        android:layout_height="@dimen/nav_view_header_image_profile"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        app:border_color="@android:color/white"
        app:border_width="1dp" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="16dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- username-->
        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="@string/my_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_change_profile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:src="@drawable/abc_spinner_mtrl_am_alpha" />
    </LinearLayout>
    <!-- email address-->

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_email"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</LinearLayout>