<resources>

    <!-- Base application theme. -->
    <style name="AboutMeTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
       <item name="colorPrimary">@color/primary</item>
       <item name="colorPrimaryDark">@color/primary_dark</item>
       <item name="colorAccent">@color/accent</item>

    </style>

    <!-- Toolbar -->
    <style name="AboutMeToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" >
        <item name="android:textSize">@dimen/custom_title_size_toolbar</item>
    </style>

    <style name="AboutMeToolbarSubtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/custom_subtitle_size_toolbar</item>
    </style>

</resources>
